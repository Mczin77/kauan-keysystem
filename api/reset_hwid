import { redis } from "./redis.js";

export default async function handler(req, res) {
  // Configurações de CORS e Verificação de Método
  res.setHeader('Access-Control-Allow-Origin', '*');
  res.setHeader('Access-Control-Allow-Methods', 'POST, OPTIONS');
  res.setHeader('Access-Control-Allow-Headers', 'Content-Type, x-panel-token');

  if (req.method === 'OPTIONS') return res.status(200).end();
  if (req.method !== "POST") return res.status(405).json({ error: "Método não permitido" });

  const token = req.headers["x-panel-token"];
  if (!token) return res.status(401).json({ error: "Sem token" });

  const { key } = req.body; 

  if (!key) {
    return res.status(400).json({ ok: false, error: "Key é obrigatória" });
  }

  const exists = await redis.exists(`key:${key}`);
  if (!exists) return res.status(404).json({ ok: false, error: "Key não encontrada" });

  // Reseta o HWID para o padrão "-" e limpa a sessão atual
  await redis.hset(`key:${key}`, { 
      hwid: "-",
      currentSessionHWID: "-",
      sessionExpiresAt: 0 
  });

  return res.json({ ok: true, message: "HWID resetado com sucesso" });
}
